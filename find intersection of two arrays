vector<int> findArrayIntersection(vector<int> &arr1, int n, vector<int> &arr2, int m)
{
	vector<int>ans;

	int i = 0;
	int j = 0;

	while(i < n && j < m){

		// condition 1
		if(arr1[i] == arr2[j]){
			ans.push_back(arr1[i]);
			i++;
			j++;
		}

		// condition 2
		else if(arr1[i] < arr2[j]){
			i++;
		}

		// condition 3
		// if(arr1[i] > arr2[j]){
		else{
			j++;
		}
	}
	  return ans;
}
